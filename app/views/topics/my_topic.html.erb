<div class="row">
  <div class="col-md-3">
    <%= render 'layouts/sidebar' %>
  </div>

  <div class="col-md-7 col-md-offset-1">

    <div class="page-header">
      <h3 class="text-primary">My Topic</h3>
    </div>

    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active">
        <a href="#published" aria-controls="published" role="tab" data-toggle="tab">Published</a>
      </li>
      <li role="presentation">
        <a href="#draft" aria-controls="draft" role="tab" data-toggle="tab">Draft</a>
      </li>
    </ul>

    <div class="tab-content">
      <div role="tabpanel" class="tab-pane padding-v active" id="published">
        <%= render 'topics/published' %>
      </div>
      <div role="tabpanel" class="tab-pane padding-v" id="draft">
        <%= render 'topics/unpublished' %>
      </div>
    </div>

  </div>
</div>
